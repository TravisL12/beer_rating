<h1>Overall Beer List</h1>
<p><%= link_to 'Back', root_path %></p>

<table class='table'>
  <thead>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>By</th>
      <!-- <th>Scores</th> -->
      <th>Overall Score</th>
    </tr>
  </thead>

  <tbody>
    <% @all_beers.sort {|a,b| b.average <=> a.average }.each do |beer| %>
      <tr>

        <td class='col-md-1'><%= beer.id %></td>
        <td class='col-md-4'><%= beer.name %></td>
        <td class='col-md-4'><%= beer.user.name %></td>

<!--         <td class='col-md-3'>
          <ul>
            <% beer.scores.each do |score| %>
              <li><%= score.rating %></li>
            <% end %>
          </ul>
        </td> -->
        <td class='col-md-1'><%= beer.average %></td>

      </tr>
    <% end %>
  </tbody>
</table>
