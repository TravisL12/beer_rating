<%= form_for [@user, @score] do |f| %>
  <% if @score.errors.any? %>
    <div id="error_explanation">

      <ul>
      <% @score.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <form>
    <div class='form-group'>
      <%= f.label 'Beer Number' %>
      <%= f.collection_select(:beer_id, Beer.all,:id, :name_with_id, {include_blank: true}, {:class => 'form-control'}) %>
    </div>
    <div class='form-group'>
      <%= f.label :rating %>
      <%= f.number_field :rating, :required => true, :class => 'form-control', :step => 0.1 %>
    </div>
    <%= f.submit 'Score!', :class => 'btn btn-info' %>
  </form>
<% end %>
