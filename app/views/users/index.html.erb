<h2>Current Researchers</h2>

<table class='user-table'>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td class='col-md-12 text-center'>
          <button class='btn btn-success'><%= link_to user.name, user_path(user.id) %></button>
        </td>
      </tr>
    <% end %>
    <tr>
      <td class='col-md-12 text-center'>
        <button class='btn btn-warning'><%= link_to 'New User', new_user_path %></button>
      </td>
    </tr>
  </tbody>
</table>
